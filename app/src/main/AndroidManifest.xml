<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fyp.kyd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.fyp.qr.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SigningActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.fyp.rsa.EncryptionActivity" />
        <activity android:name="com.fyp.rsa.Main2Activity" />
        <activity android:name="com.fyp.rsa.SignatureActivity" />
        <activity android:name="com.fyp.auth.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.fyp.auth.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QRActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.fyp.qr.ScanActivity"
            android:label="@string/lbl_scan_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.fyp.qr.DetailsViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>